<ItemInfo@GridLayout>:
  cols : 4
  size_hint_y : None
  height : 60
  spacing : 10, 0
  
  MDLabel:
    text: 'ID'
    bold: True

  MDLabel:
    text: 'Name'
    bold: True
  
  MDLabel:
    text: 'Until Date'
    bold: True
  
  MDLabel:
    text: 'Progress'
    bold: True

  MDTextField:
    id: wid_tf
    multiline: False
    readonly: True
  
  MDTextField:
    id: name_tf
    multiline: False
  
  MDTextField:
    id: days_tf
    multiline: False
    readonly: True
    on_double_tap: root.show_date_dialog()
  
  MDTextField:
    id: progress_tf
    multiline: False


<TheButtons@GridLayout>:
  cols : 4
  size_hint_y : None
  height : 60
  spacing : 10, 0
  
  Button:
    text: "Add Project"
    font_size: '18dp'
    on_press: root.add()

  Button:
    text: "Update Project"
    font_size: '18dp'
    on_press: root.update()

  Button:
    text: "Delete Project"
    font_size: '18dp'
    on_press: root.delete()

  Button:
    text: "Clear Text Fields"
    font_size: '18dp'
    on_press: root.clear()

<MainBox@BoxLayout>
  orientation: 'vertical'
  padding: (70, 30)
  spacing: 30
  pos_hint: {"center_x": 0.5, "center_y": 0.5}

  Image:
    source: 'icons/icon.png'
    pos_hint: {"center_x": 0.5}
    size_hint: (None, None)
    keep_ratio: True
    size: (250, 125)

<RestoreBox@BoxLayout>:
  GridLayout:
    cols: 1

    MDTextField:
      id: file_name
      hint_text: "Pick a backup file"
      multiline: False
      readonly: True
      size_hint_x: 0.3
      size_hint_y: None
      height: 80
      on_double_tap:root.create_dropdown_menu()

    MDRoundFlatIconButton:
      id: restore_btn
      icon: 'backup-restore'
      text: "Restore Database"
      on_release: root.restore_db()
      size_hint_x: 0.3
      size_hint_y: None
      height: 50
  
  MDRoundFlatIconButton:
    id: make_backup_btn
    icon: 'folder-plus'
    text: "Create a backup"
    on_release: root.create_backup()
    size_hint_x: 0.3
    size_hint_y: None
    height: 80
    pos_hint: {"center_x": 0.5}

  MDRoundFlatIconButton:
    id: repair_btn
    icon: 'car-wrench'
    text: "Repair Database"
    on_release: root.repair_db()
    size_hint_x: 0.3
    size_hint_y: None
    height: 80
    pos_hint: {"center_x": 0.5}